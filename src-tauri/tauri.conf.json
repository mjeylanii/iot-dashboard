{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "OfficeHub",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"fs": {
				"createDir": true,
				"readDir": true,
				"readFile": true,
				"writeFile": true,
				"scope": ["$APPCONFIG", "$APPCONFIG/*"]
				
			},
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"show": true,
				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,
				"startDragging": true,
				"setTitle": true,
				"setMaxSize": false,
				"setMinSize": false,
				"center": true
			},
			"path": {
				"all": true
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.dashy.iot-dashboard",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 720,
				"resizable": true,
				"title": "Control Center",
				"width": 1360,
				"minWidth": 1360,
				"minHeight": 720,
				"decorations": false,
				"visible": false,
				"transparent": true
			},
			{
				"width": 720,
				"height": 360,
				"decorations": false,
				"url": "splashscreen",
				"label": "splashscreen",
				"center": true,
				"resizable": false,
				"transparent": true
			},
			{
				"width": 720,
				"height": 460,
				"decorations": false,
				"url": "login",
				"label": "login",
				"center": true,
				"resizable": false,
				"transparent": true,
				"visible": false
			}
		]
	}
}
